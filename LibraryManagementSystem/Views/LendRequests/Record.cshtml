@model IEnumerable<LibraryManagementSystem.Models.LendRequest>

@{
    ViewData["Title"] = "Book Records";
    Layout = "~/Views/Shared/_userLayout.cshtml";
}
<style>
    .auth__header {
        padding: 5vh 1rem calc(3vh + 27px);
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f0f0f0;
        background-image: linear-gradient(#3280e4, #584dc3);
        background-size: cover;
        background-position: center center;
        position: relative;
        box-shadow: 0 3px 5px rgba(#000, 0.3);
    }

        .auth__header:before {
            content: "";
            position: absolute;
            left: 0;
            top: 0;
            right: 0;
            bottom: 0;
        }

    .auth__logo {
        position: relative;
        z-index: 18;
        padding: 10px;
        border: 1px solid darkblue;
        border-radius: 100%;
        box-shadow: 0 2px 7px rgba(#000, 0.15);
        overflow: hidden;
    }

    h4 {
        margin-left: 8px;
    }

    tr:nth-child(even) {
        background-color: #DDD;
    }

    thead {
        background-color: #111;
        color: white;
    }
</style>
<div class="auth__header">
    <div class="auth__logo">
        <img height="70" src="/imgs/books.png" alt="">
    </div>
    <h4>Your All Books</h4>
</div>
<div class="container">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LendId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book.BookTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LendDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FineAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LendStatus)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LendId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LendDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FineAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LendStatus)
            </td>
        </tr>
}
</tbody>
</table>
</div>